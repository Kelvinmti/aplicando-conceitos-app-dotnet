@using GerFin.ApplicationCore.DTO;

@model ReceitaDTO;



<form id="formNovaReceita" asp-antiforgery="true" asp-controller="Receitas" asp-action="CriarReceita">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="form-group col-sm-12">
            <label asp-for="Descricao"></label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-4">
            <label asp-for="Recorrente"></label>
            <select asp-for="Recorrente" class="form-control">
                <option value=""></option>
                <option value="true">Sim</option>
                <option value="false">Não</option>
            </select>
        </div>
        <div class="form-group col-sm-8">
            <label asp-for="Valor"></label>
            <input asp-for="Valor" class="form-control" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-4">
            <label asp-for="Recebido"></label>
            <select asp-for="Recebido" class="form-control">
                <option value=""></option>
                <option value="1">Sim</option>
                <option value="0">Não</option>
            </select>
        </div>
        <div class="form-group col-sm-8">
            <label asp-for="DataRecebido"></label>
            <input asp-for="DataRecebido" class="form-control" type="date" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group row justify-content-md-center">
                <input type="button" data-dismiss="modal" value="Cancelar" class="col-sm-4 btn btn-danger" />
                <input type="submit" value="Salvar" class="offset-sm-1 offset-lg-1 col-sm-4 btn btn-primary" />
            </div>
        </div>
    </div>
</form>